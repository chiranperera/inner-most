# Next.js Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="InnorMost"
NODE_ENV=development

# Database Configuration (choose one)
DATABASE_URL=postgresql://user:password@localhost:5432/innermost
# or MongoDB
# DATABASE_URL=mongodb://localhost:27017/innermost

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# CMS Configuration (Payload CMS)
PAYLOAD_SECRET=your-payload-secret-key-here
PAYLOAD_CONFIG_PATH=src/payload.config.ts

# Media Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Services (Resend)
RESEND_API_KEY=your-resend-api-key
CONTACT_EMAIL=contact@innermost.com

# Analytics (Google Analytics)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Social Media Authentication (Optional)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# API Keys for External Services
OPENAI_API_KEY=your-openai-api-key-for-matching-algorithm

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Error Tracking (Sentry)
SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token